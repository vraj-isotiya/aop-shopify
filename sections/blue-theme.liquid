<!-- CUSTOM BLUE THEME SECTION -->
<!-- Top Section: Explore Subject Specific Support -->
<section class="section-bg-blue py-5" id="custome-top-section">
  <div class="container">
    <div class="row align-items-center">
      <!-- Left Content Block -->
      <div class="col-lg-6">
        <p class="text-uppercase-custom mb-2">{{ section.settings.subheading }}</p>
        <h1 class="heading-1-custom mb-4">
          {{ section.settings.main_heading | newline_to_br }}
        </h1>
        <p class="paragraph-lg-custom mb-4">
          {{ section.settings.description }}
        </p>
        {% if section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="btn btn-primary-custom">
            {{ section.settings.button_text }}
          </a>
        {% else %}
          <button class="btn btn-primary-custom">{{ section.settings.button_text }}</button>
        {% endif %}

        <blockquote class="blockquote-custom">
          {{ section.settings.quote_text }}
          <footer>{{ section.settings.quote_author }}</footer>
        </blockquote>
      </div>

      <!-- Right Image/Illustration Block -->
      <div class="col-lg-6 d-flex justify-content-center justify-content-lg-end">
        <!-- Placeholder for the illustration/image -->
        {% if section.settings.right_image %}
          <img
            src="{{ section.settings.right_image | image_url }}"
            alt="Learning Illustration"
            class="img-fluid image-style-custom"
            width=""
            height="" />
        {% endif %}
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Top Blue Section",
    "settings": [
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Help Your Child Excel"
      },
      {
        "type": "text",
        "id": "main_heading",
        "label": "Main Heading",
        "default": "Explore Subject Specific Support"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Awaken minds and inspire learning with free activities, resources and trials designed to inspire, build confidence and help your home learner thrive."
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "EXPLORE NOW"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "textarea",
        "id": "quote_text",
        "label": "Quote Text",
        "default": "\"I love the fact that I have a complete education and that every single subject is focused on Christ. Even my math projects!\""
      }, {
        "type": "text",
        "id": "quote_author",
        "label": "Quote Author",
        "default": "Madeline S. | Ignite Christian Academy Student"
      }, {
        "type": "image_picker",
        "id": "right_image",
        "label": "Right Side Image"
      }
    ],
    "presets": [
      {
        "name": "Top Blue Section",
        "category": "Custom"
      }
    ]
  }
{% endschema %}