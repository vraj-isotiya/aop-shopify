<!-- Product Cards Section -->
<section id="product-card">
  <div class="container py-5">
    <div class="row d-flex justify-content-center row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      {% for block in section.blocks %}
        <div class="col">
          <div class="card h-100">
            <div
              class="card-header-custom header-{{block.settings.color_class}}"
              style="background-image: url({{ block.settings.bg_image | image_url }});"
            >
              <div class="card-header-overlay product-{{ block.settings.color_class }}"></div>
              {% if block.settings.logo_image %}
                <img
                  src="{{ block.settings.logo_image | image_url }}"
                  alt="Card Logo"
                  class="img-fluid mb-3"
                  style="max-width: 300px; z-index: 2; position: relative"
                  width=""
                  height=""
                >
              {% endif %}
              <div class="card-badges mb-2">
                {% if block.settings.badge1_text != blank %}
                  <span class="badge">
                    {% if block.settings.badge1_icon != blank %}
                      <i class="{{ block.settings.badge1_icon }} me-2"></i>
                    {% endif %}
                    {{ block.settings.badge1_text }}
                  </span>
                {% endif %}
                {% if block.settings.badge2_text != blank %}
                  <span class="badge">
                    {% if block.settings.badge2_icon != blank %}
                      <i class=" {{ block.settings.badge2_icon }} me-2"></i>
                    {% endif %}
                    {{ block.settings.badge2_text }}
                  </span>
                {% endif %}
              </div>
            </div>

            <div class="card-body ">
              <h5 class="card-title">{{ block.settings.title }}</h5>
              <p class="card-text">{{ block.settings.subtitle }}</p>
              <div class="card-buttons mt-auto">
                {% if block.settings.button1_link %}
                  <a href="{{ block.settings.button1_link }}" class="btn btn-learn-more">
                    {{ block.settings.button1_text }}
                  </a>
                {% else %}
                  <a href="#" class="btn btn-learn-more">
                    {{ block.settings.button1_text }}
                  </a>
                {% endif %}
                {% if block.settings.button2_link %}
                  <a href="{{ block.settings.button2_link }}" class="btn btn-custom-{{ block.settings.color_class }}">
                    {{ block.settings.button2_text }}
                  </a>
                {% else %}
                  <a href="#" class="btn btn-custom-{{ block.settings.color_class }}">
                    {{ block.settings.button2_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Product Cards",
  "tag": "section",
  "class": "product-card-section",
  "max_blocks": 6,
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "bg_image",
          "label": "Background Image"
        },
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "color_class",
          "label": "Color Class (for overlay & button)",
          "default": "monarch"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Card Title",
          "default": "Online, Parent-Supported"
        }, {
          "type": "textarea",
          "id": "subtitle",
          "label": "Card Description",
          "default": "Description goes here..."
        }, {
          "type": "text",
          "id": "badge1_icon",
          "label": "Badge 1 Icon (Font Awesome)",
          "default": "fas fa-desktop"
        }, {
          "type": "text",
          "id": "badge1_text",
          "label": "Badge 1 Text",
          "default": "Online"
        }, {
          "type": "text",
          "id": "badge2_icon",
          "label": "Badge 2 Icon (Font Awesome)"
        }, {
          "type": "text",
          "id": "badge2_text",
          "label": "Badge 2 Text",
          "default": "Grades 3â€“12"
        }, {
          "type": "text",
          "id": "button1_text",
          "label": "Left Button Text",
          "default": "Learn More"
        }, {
          "type": "url",
          "id": "button1_link",
          "label": "Left Button Link"
        }, {
          "type": "text",
          "id": "button2_text",
          "label": "Right Button Text",
          "default": "FREE TRIAL"
        }, {
          "type": "url",
          "id": "button2_link",
          "label": "Right Button Link"
        }

      ]
    }
  ],
  "presets": [
    {
      "name": "Product Cards",
      "blocks": []
    }
  ]
}
{% endschema %}
