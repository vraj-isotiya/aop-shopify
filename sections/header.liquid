<!-- Top Bar -->
<div class="top-bar text-white small py-2 px-4 d-flex justify-content-between align-items-center">
  <div class="d-flex align-items-center gap-2">
    <span>{{ section.settings.phone_text }}</span>
    <i class="fa-solid fa-message"></i>
  </div>
  <div class="text-center flex-grow-1">
    <span class="d-none d-md-inline">
      {{ section.settings.promo_message }}
    </span>
  </div>
  <div class="d-flex align-items-center gap-4">
    <span>
      {LOG IN
      <i class="fas fa-angle-down"></i>} {My Account
      <i class="fas fa-angle-down"></i>}
    </span>
  </div>
</div>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light py-2">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center" href="#">
      {% if section.settings.logo_image != blank %}
        <img
          src="{{ section.settings.logo_image | image_url }}"
          alt="Logo"
          width="100"
          height="50">
      {% else %}
        <img
          src="{{ 'logo.jpg' | asset_url }}"
          alt="Default Logo"
          width="100"
          height="50">
      {% endif %}

    </a>

    <div class="d-flex order-lg-1 gap-3">
      <!-- Search & Cart -->
      <div class="d-flex align-items-center gap-2">
        <button class="btn btn-link text-secondary me-2">
          <i class="fa-solid fa-magnifying-glass fa-lg"></i>
        </button>
        <button class="btn btn-link text-secondary p-0">
          <i class="fa-solid fa-cart-shopping fa-lg"></i>
        </button>
        0
      </div>
      <button
        class="navbar-toggler ms-auto"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse order-md-0" id="navbarNav">
      <ul class="navbar-nav me-auto">
        {% for link in linklists[section.settings.main_menu].links %}
          <li class="nav-item">
            <a class="nav-link fw-medium" href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>

    </div>
  </div>
</nav>

{% schema %}
  {
    "name": "Top Bar and Navbar",
    "tag": "section",
    "class": "top-bar-navbar-section",
    "settings": [
      {
        "type": "text",
        "id": "phone_text",
        "label": "Phone Text",
        "default": "Call 1-800-622-3070"
      }, {
        "type": "text",
        "id": "promo_message",
        "label": "Promo Message",
        "default": "FREE Shipping 20% Off All Products starts 2/2/2022!"
      }, {
        "type": "image_picker",
        "id": "logo_image",
        "label": "Logo"
      }, {
        "type": "link_list",
        "id": "main_menu",
        "label": "Main Menu",
        "default": "main-menu"
      }
    ],
    "presets": [
      {
        "name": "Top Bar and Navbar"
      }
    ]
  }
{% endschema %}